  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')

    title= title

    meta(name='author', content='Brian Frichette')
    meta(name='description', content='A CSS editor for custom Video.js player skins')
    meta(name='keywords', content='Video.js Player Skin, Chrome, Design, Editor')
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', href='/images/favicon.ico')

    link(rel='stylesheet', href='/stylesheets/codemirror.css')
